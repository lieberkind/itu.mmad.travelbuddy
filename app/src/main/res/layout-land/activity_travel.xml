<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".TravelActivity">


    <TextView android:id="@+id/checkin_label"
        android:text="@string/checkin_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left" />

    <Button android:id="@+id/checkin_button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkin_label"
        android:layout_alignParentRight="true"
        android:text="@string/checkin_button" />

    <EditText android:id="@+id/checkin_station"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/checkin_button"
        android:layout_alignBottom="@id/checkin_button"/>

    <TextView android:id="@+id/checkout_label"
        android:text="@string/checkout_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkin_station"
        android:gravity="left" />

    <Button android:id="@+id/checkout_button"
        android:text="@string/checkout_button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkout_label"
        android:layout_alignParentRight="true"
        android:enabled="false" />

    <EditText android:id="@+id/checkout_station"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/checkout_button"
        android:layout_alignBottom="@id/checkout_button"
        android:enabled="false" />


</RelativeLayout>
